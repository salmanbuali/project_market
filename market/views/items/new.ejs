<%- include('../partials/header') %>

<form action="/items/:id" method="POST">
  <div id="item-form-container">
    <div><label for="name">Name:</label><input type="text" id="name" name="name"></div>
    <div><label for="price">Price:</label><input type="number" id="price" name="price"></div>
    <div><label for="desc">Description:</label><input type="text" id="desc" name="desc"></div>
    <div><label for="image">Image:</label><input type="text" id="image" name="image"></div>
    <div><label for="qty">Quantity:</label><input type="number" id="qty" name="qty"></div>
    <br>
    <button type="submit">Add Item</button>
  </div>
</form>

