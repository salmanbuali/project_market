<%-include('../partials/header') %> 

<title>Store</title>
<div >
<form class="search-div" action="/items" method="get"><input class="search" name="value" type="text" placeholder="search">
  <button class="search search-button" type="submit">search</button>
</form>
<Form  class="search-div" action="/items/price" method="get">
  <select class="search search-button" name="pricing">
    <option  value="1">high to low</option>
    <option  value="-1">low to high</option>
  </select>
  <button class="search search-button" type="submit">change price</button>
</Form>
</div>


<p>
    <section class="row">
      <% for (let j = 0; j < items.length ; j++) { %>
        <% if (j < items.length) { %>
          <% if (items[j].qty > 0) { %>
          <a href='/items/show/<%= items[j]._id %>' class="white-container" id="item-div">
            <div><img src="<%= items[j].image %>" alt="item image" class="centered-image"></div>
            <div class="item-font-main"><%= items[j].name %></div>
            <div class="price-font-main">BHD <%= items[j].price %></div>
          </a>
          <% } %>
        <% } %>
      <% } %>
    </section>
</p>


