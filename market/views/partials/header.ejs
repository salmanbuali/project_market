    <% if (typeof message !== 'undefined') { //typeof message!=='undefined' &&  %> 
      <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <%= message %>
      </div>
      <% }%>

